{{#each chores as |chore|}}
<div class="chore-container">
  <div class="row row-centered">
    <div class="col-xs-4 col-centered box">
      <div class="content chore-name">Name: {{chore.name}} </div>
    </div>
    <div class="col-xs-4 col-centered box">
      <div class="content chore-due">Due Date: {{chore.due_date}}</div>
    </div>
    <div class="col-xs-4 col-centered box">
      <div class="content chore-difficulty">Difficulty: {{chore.difficulty}}</div>
    </div>
  </div>
  <button type="button" class="update-button" data-chore-id="{{chore.id}}">Update</button> <button type="button" data-chore-id="{{chore.id}}" class="delete-button">Delete</button>
  <div class="show-chore">
    <br>

  <form class="chore-update-{{chore.id}} hidden form-group update-form" data-chore-id="{{chore.id}}">
    <input type="text" placeholder="chore" name="chore[name]">
    <input type="text" placeholder="DD-MM-YYYY" name="chore[due_date]">
  <input type="text" placeholder="Difficulty, 1-5" name="chore[difficulty]">
  <button type="submit" class="btn btn-default update-button-2" data-chore-id="{{chore.id}}">Update</button>
  </form>
</div>
<hr>

{{/each}}
